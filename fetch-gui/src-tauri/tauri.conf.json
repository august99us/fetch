{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fetch-gui",
  "version": "0.0.2",
  "identifier": "com.sparrow.fetch-gui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "full",
        "url": "/search",
        "title": "Fetch",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["*/**"],
          "deny": [],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../fetch-core/bundle/": "",
      "bundle/": ""
    }
  }
}

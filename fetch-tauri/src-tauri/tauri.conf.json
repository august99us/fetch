{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fetch",
  "version": "0.0.2",
  "identifier": "com.sparrow.fetch",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["*/**"],
          "deny": [],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../fetch-core/bundle/": ""
    },
    "windows": {
      "wix": {
        "fragmentPaths": ["./windows/fragments/copy-models.wxs"],
        "componentRefs": ["CopyModelsComponent"]
      }
    }
  },
  "plugins": {
    "cli": {
      "description": "Fetch",
      "args": [],
      "afterHelp": "Run without subcommands to run the gui application, or run with subcommands for CLI",
      "subcommands": {
        "drop": {
          "description": "drops entire database table (development use)",
          "args": [
            {
              "name": "data_directory",
              "description": "Directory where the index is stored",
              "takesValue": true,
              "required": true
            },
            {
              "name": "table_name",
              "description": "Name of table to drop",
              "takesValue": true,
              "required": true
            }
          ]
        },
        "index": {
          "description": "indexes things semantically",
          "args": [
            {
              "name": "jobs",
              "short": "j",
              "description": "Number of parallel indexing jobs to run at once",
              "takesValue": true
            },
            {
              "name": "recursive",
              "short": "r",
              "description": "Recursively look through sub folders to find files to index"
            },
            {
              "name": "force",
              "short": "f",
              "description": "Do not confirm before indexing"
            },
            {
              "name": "metrics",
              "short": "m",
              "description": "Track and print metrics"
            },
            {
              "name": "paths",
              "index": 1,
              "takesValue": true,
              "multiple": true,
              "description": "File or folder paths to index"
            }
          ]
        },
        "query": {
          "description": "queries semantic file index with a query string",
          "args": [
            {
              "name": "query",
              "index": 1,
              "takesValue": true,
              "description": "String to query files with"
            },
            {
              "name": "num_results",
              "short": "n",
              "takesValue": true,
              "description": "The number of file results to return"
            },
            {
              "name": "chunks_per_query",
              "short": "c",
              "takesValue": true,
              "description": "The number of chunks to query per API call (higher = faster but more memory)"
            }
          ]
        },
        "query-by-file": {
          "description": "queries semantic file index with a query file",
          "args": [
            {
              "name": "query",
              "index": 1,
              "takesValue": true,
              "description": "Path to query file"
            },
            {
              "name": "num_results",
              "short": "n",
              "takesValue": true,
              "description": "The number of file results to return"
            }
          ]
        }
      }
    }
  }
}
